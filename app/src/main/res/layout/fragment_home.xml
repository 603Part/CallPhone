<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="2.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="任务接单"
                android:layout_weight="1"
                android:typeface="serif" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:typeface="serif"
                android:text="已接单 : 20 项 (总收益1亿元)"/>
        </LinearLayout>

        <com.phone.call.view.ScrollLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/home_start"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="开始"
                android:textColor="@color/write"
                android:textSize="12sp" />

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/home_stop"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="暂停"
                android:textColor="@color/write"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <View
                android:layout_width="2.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="接单详情"
                android:typeface="serif" />
        </LinearLayout>

        <TextView
            android:id="@+id/home_task"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/task"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/right_arrow"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="我的接单" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/home_profit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@mipmap/profit"
            android:drawablePadding="12dp"
            android:drawableRight="@mipmap/right_arrow"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="我的收益" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="40dp"
            android:background="@color/gray"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</ScrollView>